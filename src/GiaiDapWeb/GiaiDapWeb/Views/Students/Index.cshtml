@model IEnumerable<GiaiDapWeb.Models.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<link href="../StyleSheet/dashboard.css" rel="stylesheet">
<h2 class="sub-header" style="padding-left:20%">Danh sách sinh viên</h2>
<div class="table-responsive">
    <table class="table table-striped" style="float:right">
        <thead>
            <tr>
                <th></th>
                <th>Mã sinh viên</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Địa chỉ</th>
                <th>Lớp </th>
                <th>Giới tính</th>
                <th>Cấp bậc</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%"></td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.student_id)</td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.name)</td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.date_of_birth)</td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.address)</td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.@class)</td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.sex)</td>
                    <td width="10%">@Html.DisplayFor(modelItem => item.education_level)</td>
                    <td width="10%">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.student_id }) |
                        @Html.ActionLink("Xem", "Details", new { id = item.student_id }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.student_id })
                    </td>
                </tr>


            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(function () {
        $('.RemoveLink').click(function () {
            var x = $(this).attr("data-id");
            if (confirm("Đối tượng sẽ bị xóa.Bạn có muốn không ?")) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Question")',
                    data: { id: x }
                });
                $("#row-" + x).remove();
            }
        })
    })
</script>
