
@model IEnumerable<GiaiDapWeb.Models.Account>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<link href="../StyleSheet/dashboard.css" rel="stylesheet">
<h2 class="sub-header" style="padding-left:20%">Quản lý tài khoản</h2>
<div class="table-responsive">
    <table class="table table-striped" style="float:right">
        <thead>
            <tr>
                <th></th>
                <th>ID</th>
                <th>Mật khẩu</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%"></td>
                    <td width="20%">@Html.DisplayFor(modelItem => item.username)</td>
                    <td width="20%">@Html.DisplayFor(modelItem => item.password)</td>
                    <td width="20%">@Html.DisplayFor(modelItem => item.Role.role1)</td>
                    <td width="20%">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.username }) |
                        @Html.ActionLink("Xem", "Details", new { id = item.username }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.username })
                    </td>
                </tr>


            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(function () {
        $('.RemoveLink').click(function () {
            var x = $(this).attr("data-id");
            if (confirm("Đối tượng sẽ bị xóa.Bạn có muốn không ?")) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Question")',
                    data: { id: x }
                });
                $("#row-" + x).remove();
            }
        })
    })
</script>

