@model IEnumerable<GiaiDapWeb.Models.Answer>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewAnswer</title>
</head>
<body>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.question_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.time_respond)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ministry.name)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.question_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.time_respond)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ministry.name)
            </td>
           
        </tr>
    }
    
    </table>
</body>
</html>
